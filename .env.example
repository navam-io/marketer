# Database
DATABASE_URL="file:./prisma/dev.db"

# LinkedIn OAuth (v0.13.0+)
# Create a LinkedIn app at: https://www.linkedin.com/developers/apps
# Required scopes: r_liteprofile, w_member_social
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:3000/api/auth/linkedin/callback

# Anthropic API (for Claude content generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: API URL for scheduler (defaults to localhost:3000)
# NEXT_PUBLIC_API_URL=http://localhost:3000
